{
  "extends": [
    "stylelint-scss",
    "stylelint-prettier/recommended"
  ],
  "plugins": [
    "stylelint-prettier"
  ],
  "rules": {
    "alpha-value-notation": null,
    "color-function-notation": null,
    "selector-max-id": 0,
    "selector-class-pattern": null,
    "unit-allowed-list": [
      "%",
      "deg",
      "rem",
      "ms",
      "dvh",
      "s",
      "vh",
      "px",
      "em",
      "vm",
      "vw"
    ]
  },
  "defaultSeverity": "warning"
}
